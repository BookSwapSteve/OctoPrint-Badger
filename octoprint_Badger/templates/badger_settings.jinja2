<form class="form-horizontal">

    <h3>Options</h3>
    <div class="control-group col-xs-4">
        <label class="control-label">Remove After (Months)</label>
        <div class="controls">
            <input type="text" data-bind="value: settings.plugins.badger.removeAfterMonths" >
        </div>
    </div>

    <div class="control-group col-xs-4">
        <label class="control-label">Label Serial Number Prefix</label>
        <div class="controls">
            <input type="text" data-bind="value: settings.plugins.badger.labelSerialNumberPrefix" >
        </div>
    </div>

    <div class="control-group col-xs-4">
        <label class="control-label">Date Format</label>
        <div class="controls">
            <input type="text" data-bind="value: settings.plugins.badger.dateFormat" >
        </div>
    </div>

    <h3>Label Printing</h3>
    <div class="control-group">
        <label class="control-label">Label Template</label>
        <div class="controls">
            <select data-bind="options: settings.plugins.badger.labelTemplates, value: settings.plugins.badger.labelTemplate" >
			</select>
        </div>
    </div>

    <div class="control-group col-xs-4">
        <label class="control-label">Printer</label>
        <div class="controls">
			<select data-bind="options: settings.plugins.badger.printers, value: settings.plugins.badger.printer" >
			</select>
		</div>
    </div>

    <div class="control-group col-xs-4">
        <label class="control-label">Left Margain</label>
        <div class="controls">
            <input type="text" data-bind="value: settings.plugins.badger.xOffset" />
            <span class="help">Offset in mm from the left side</span>
        </div>
    </div>

    <div class="control-group col-xs-4">
        <label class="control-label">Bottom Margain</label>
        <div class="controls">
            <input type="text" data-bind="value: settings.plugins.badger.yOffset" />
            <span class="help">Offset in mm from the bottom edge</span>
        </div>
    </div>

    <h3>RFID Reader</h3>
    <div class="control-group col-xs-4">
        <label class="control-label">RFID Reader Type</label>
        <div class="controls">
			<select data-bind="options: settings.plugins.badger.readerOptions, value: settings.plugins.badger.rfidReaderType" >
			</select>
        </div>
    </div>

    <div class="control-group col-xs-4">
        <label class="control-label">RFID Comm Port</label>
        <div class="controls">
			<select data-bind="options: serial_portOptions, value: settings.plugins.badger.rfidComPort" >
			</select>
        </div>
    </div>
</form>
